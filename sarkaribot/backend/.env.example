# Environment variables for SarkariBot
# Copy this file to .env and update with your actual values

# Django Settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database Configuration
DB_NAME=sarkaribot_dev
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432

# Cache and Message Broker
CACHE_URL=redis://localhost:6379/1
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Email Configuration (Production)
EMAIL_HOST=
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=

# Error Tracking (Production)
SENTRY_DSN=

# SEO and Content Settings
SITE_URL=http://localhost:8000
SITE_NAME=SarkariBot
SITE_DESCRIPTION=Your Ultimate Government Job Portal

# Scraping Configuration
SCRAPING_DEFAULT_DELAY=2
SCRAPING_MAX_RETRIES=3
SCRAPING_TIMEOUT=30

# Social Media and External APIs
GOOGLE_ANALYTICS_ID=
FACEBOOK_APP_ID=
TWITTER_HANDLE=@sarkaribot
