# =============================================================================
# SarkariBot Environment Configuration
# =============================================================================
# Copy this file to .env and update with your actual values
#
# Environment-specific settings:
# - Use these defaults for local development
# - Override for production deployment
# - Set DJANGO_SETTINGS_MODULE to switch between environments

# =============================================================================
# Django Core Settings
# =============================================================================
SECRET_KEY=your-secret-key-here-change-in-production-environments
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Language and timezone
LANGUAGE_CODE=en-us
TIME_ZONE=Asia/Kolkata

# =============================================================================
# Database Configuration
# =============================================================================
# For development (SQLite - no additional setup required)
DB_ENGINE=django.db.backends.sqlite3
DB_NAME=db_dev.sqlite3

# For production (PostgreSQL - uncomment and configure)
# DB_ENGINE=django.db.backends.postgresql
# DB_NAME=sarkaribot_prod
# DB_USER=sarkaribot_user
# DB_PASSWORD=your_database_password
# DB_HOST=localhost
# DB_PORT=5432
# DB_SSL_MODE=require
# DB_CONN_MAX_AGE=600

# =============================================================================
# Cache and Message Broker
# =============================================================================
# For development (Redis not required - uses dummy cache)
CACHE_BACKEND=django.core.cache.backends.dummy.DummyCache
CACHE_LOCATION=
CACHE_TIMEOUT=300

# For production (Redis - uncomment and configure)
# CACHE_BACKEND=django.core.cache.backends.redis.RedisCache
# CACHE_URL=redis://localhost:6379/1
# CACHE_TIMEOUT=3600
# CACHE_MAX_CONNECTIONS=20

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# =============================================================================
# CORS Configuration
# =============================================================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8000
CORS_ALLOW_CREDENTIALS=True

# =============================================================================
# Email Configuration
# =============================================================================
# For development (console backend - emails printed to console)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# For production (SMTP - uncomment and configure)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password
# DEFAULT_FROM_EMAIL=noreply@sarkaribot.com

# =============================================================================
# File Storage
# =============================================================================
STATIC_URL=/static/
STATIC_ROOT=staticfiles
MEDIA_URL=/media/
MEDIA_ROOT=media

# =============================================================================
# API Configuration
# =============================================================================
API_TITLE=SarkariBot API
API_DESCRIPTION=Government Job Portal API
API_VERSION=1.0.0

# Django REST Framework
DRF_PAGE_SIZE=20
DRF_MAX_PAGE_SIZE=100
DRF_ANON_RATE=100/hour
DRF_USER_RATE=1000/hour

# =============================================================================
# Error Tracking (Production)
# =============================================================================
# Sentry DSN for error tracking in production
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1

# =============================================================================
# SarkariBot Application Settings
# =============================================================================
# Job management
MAX_JOBS_PER_SOURCE=1000
CLEANUP_AFTER_DAYS=365

# Web scraping configuration
SCRAPING_DEFAULT_DELAY=2
SCRAPING_MAX_RETRIES=3
SCRAPING_TIMEOUT=30

# SEO and content settings
ENABLE_SEO_AUTOMATION=True
GENERATE_SITEMAP=True
SEO_TITLE_MAX_LENGTH=60
SEO_DESCRIPTION_MAX_LENGTH=160
SEO_KEYWORDS_MAX_COUNT=7

# NLP Model
SPACY_MODEL=en_core_web_sm

# Task scheduling (in seconds)
SCRAPE_INTERVAL=3600
STATUS_UPDATE_INTERVAL=21600
SEO_GENERATION_INTERVAL=7200
CLEANUP_INTERVAL=86400

# =============================================================================
# Security Settings (Production)
# =============================================================================
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
SESSION_COOKIE_AGE=1209600

# =============================================================================
# Performance Settings
# =============================================================================
FILE_UPLOAD_MAX_MEMORY_SIZE=2621440
DATA_UPLOAD_MAX_MEMORY_SIZE=2621440

# Celery worker settings
CELERY_PREFETCH_MULTIPLIER=1
CELERY_MAX_TASKS_PER_CHILD=1000

# =============================================================================
# Logging Configuration
# =============================================================================
LOGS_DIR=logs

# =============================================================================
# External Services (Optional)
# =============================================================================
# Google Analytics
GOOGLE_ANALYTICS_ID=

# Social Media
FACEBOOK_APP_ID=
TWITTER_HANDLE=@sarkaribot

# Site Configuration
SITE_URL=http://localhost:8000
SITE_NAME=SarkariBot
SITE_DESCRIPTION=Your Ultimate Government Job Portal
